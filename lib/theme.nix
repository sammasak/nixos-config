# Shared theme configuration
# Single source of truth for wallpaper, fonts, and other theme-related paths

{
  # Wallpaper - referenced by Stylix, hyprpaper, hyprlock
  wallpaper = ../assets/wallpapers/wallpaper.jpg;

  # Font names for consistency across configs
  fonts = {
    mono = "JetBrains Mono";              # For terminals, code editors
    monoNerd = "JetBrainsMono Nerd Font"; # For bars/widgets with icons
    sans = "Noto Sans";                   # For UI elements
  };
}
